    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "puppeteer-jquery Mocha",
            "cwd": "${workspaceFolder}/puppeteer-jquery",
            "program": "${workspaceFolder}/puppeteer-jquery/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/puppeteer-jquery/test/*.spec.ts",
            ],
            "skipFiles": [
                "<node_internals>/**/*s"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "playwright-jquery Mocha",
            "cwd": "${workspaceFolder}/playwright-jquery",
            "program": "${workspaceFolder}/playwright-jquery/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/playwright-jquery/test/*.spec.ts",
            ],
            "skipFiles": [
                "<node_internals>/**/*"
            ]
        },

    ]
}